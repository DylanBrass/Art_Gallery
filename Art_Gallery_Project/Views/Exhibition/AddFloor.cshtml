@model Art_Gallery_Project.Models.DTO.AddFloorViewModel

<h2>Add Floor</h2>

<form asp-action="AddFloor" method="post">
    <div class="form-group">
        <input type="hidden" id="number" name="exhibitionId" id="exhibitionId" value="@Model.ExhibitionId"/>
    </div>
    <div class="form-group">
        <label for="floorNumber">Floor Number:</label>
        <input type="number" class="form-control" id="number" name="floorNumber"/>
    </div>
    <div class="form-group">
        <label for="ArtWorks">Select Artworks:</label>
        @foreach (var artwork in Model.ArtWorks)
        {
            <div class="form-check">
                <input type="checkbox" id="artwork_@artwork.Id" name="ArtWorks" value="@artwork.Id"/>
                <label for="artwork_@artwork.Id">@artwork.Title</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Add Floor</button>
</form>