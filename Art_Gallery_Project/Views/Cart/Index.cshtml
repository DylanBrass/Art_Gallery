@model Art_Gallery_Project.Models.Cart.Cart

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f7f7f7;
        margin: 0;
        padding: 0;
    }

    .container {
        width: 80%;
        margin: 20px auto;
    }

    h1 {
        text-align: center;
        color: #333;
        margin-bottom: 20px;
    }

    .cart-item {
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 15px;
        margin-bottom: 20px;
        background-color: #fff;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
    }

    .cart-item h2 {
        margin-bottom: 10px;
        color: #333;
    }

    .cart-item p {
        margin-bottom: 5px;
        color: #777;
    }

    .btn {
        padding: 8px 16px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        text-transform: uppercase;
        transition: background-color 0.3s ease;
    }

    .btn:hover {
        background-color: #0056b3;
    }
</style>

<div class="container">
    <h1>Cart</h1>

    @foreach (var itemInCart in Model.Lines)
    {
        <div class="cart-item">
            <h2>@itemInCart.ArtWork.Title</h2>
            <p>Price: $@itemInCart.ArtWork.Price</p>
            <form asp-action="RemoveFromCart" asp-controller="Cart" asp-route-id="@itemInCart.ArtWork.Id" method="post">
                <input type="submit" value="Remove from cart" class="btn"/>
            </form>
        </div>
    }
</div>